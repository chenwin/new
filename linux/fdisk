echo -e "n\np\n1\n\n\nw\n" | fdisk -S 56 /dev/vdb
mkfs.ext3 /dev/vdb1

快递格式化fast format
mkfs.ext3 -T largefile /dev/sdb

echo -e "y\n" | mkfs.ext4 -T largefile -n /dev/sdb

